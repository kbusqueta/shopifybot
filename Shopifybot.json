import express from "express";
import bodyParser from "body-parser";
import fetch from "node-fetch";

const app = express();
app.use(bodyParser.json());

const TELEGRAM_TOKEN = "7989295236:AAFW5TD4y1DMDZucSqPCyMa5zeRd8dYvv1E";
const CHAT_ID = "2107330226";

app.post("/shopify-webhook", async (req, res) => {
  const order = req.body;
  const message = `
  ðŸ›’ Nouvelle commande Shopify !
  Client : ${order.customer?.first_name || "Inconnu"} ${order.customer?.last_name || ""}
  Total : ${order.total_price} ${order.currency}
  Produits : ${order.line_items.map(i => `${i.quantity} x ${i.name}`).join(", ")}
  `;

  await fetch(`https://api.telegram.org/bot${TELEGRAM_TOKEN}/sendMessage`, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({
      chat_id: CHAT_ID,
      text: message
    })
  });

  res.status(200).send("OK");
});

app.listen(3000, () => console.log("Webhook en Ã©coute sur port 3000"));